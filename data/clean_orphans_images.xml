<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- This is for the cron job that will be triggered once a week -->
    <record id="clean_orphans_images_cron" model="ir.cron">
        <field name="name">Clean Orphan Images</field>
        <field name="interval_number">7</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="odoo_multiple_product_images.model_product_image_backend"/>
        <field name="nextcall" eval="((datetime.today() - timedelta(datetime.today().weekday() + 1)).replace(hour=7, minute=00)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="code">model.clean_orphans_images()</field>
        <field name="state">code</field>
    </record>

</odoo>